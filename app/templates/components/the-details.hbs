<div class="listing">
    <div class="container shadow-md md:w-3/5 mx-auto p-8 sm:p-6 md:p-4 lg:p-3 xl:p-3">
        <p>
            {{post.title}}
            <button
                class="btn float-right clearfix bg-white hover:border-transparent hover:text-teal-500 hover:bg-white mt-4 lg:mt-0 text-gray-800 font-semibold py-1 px-1 border border-gray-400 rounded shadow"
                type="button" {{action this.toggleContent on='click'}}>more...</button>
        </p>
    </div>


    {{#if this.showPost}}
    {{#transition-group transitionName="c-modal"}}
    <div class="c-modal-manual shadow-md md:w-3/5 mx-auto p-8 sm:p-6 md:p-4 lg:p-3 xl:p-3">
        <div class="c-modal-manual__content">
            <div class="text-left sm:text-center md:text-right lg:text-justify xl:text-center p-4">
                <p>{{post.body}}</p>
            </div>
            <ul class="pb-4 pt-4">
                <li>
                    <p>User Name: {{post.userId.username}} </p>
                </li>
                <li>
                    <p>Company: {{post.userId.company.name}}</p>
                </li>
                <li>
                    {{!-- TODO: Fix format --}}
                    <p><a href="{{post.userId.website}}"></a></p>
                </li>
                <li>
                    <p>Catchphrase: {{post.userId.company.catchPhrase}}</p>
                </li>
                <li>
                    <p>Author's Name: {{post.userId.name}} </p>
                </li>
                <li>
                    {{!-- TODO: Fix format --}}
                    <p><a href="mailto:{{post.userId.email}}"></a></p>
                </li>
                <li>
                    <p>City: {{post.userId.address.city}} </p>
                </li>
            </ul>
        </div>
    </div>
    {{/transition-group}}
    {{/if}}
</div>